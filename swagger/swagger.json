{
  "swagger": "2.0",
  "info": {
    "title": "Blockchain API",
    "description": "A sample API that demonstrates how to use Flask-SwaggerUI.",
    "version": "1.0"
  },
  "basePath": "/api",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["text/html"],
  "paths": {
    "/": {
      "get": {
        "summary": "Returns a simple 'Hello, World!' message.",
        "produces": ["text/html"],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/hello/": {
      "get": {
        "summary": "Returns a greeting message.",
        "produces": ["text/html"],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/hello/{name}": {
      "get": {
        "summary": "Returns a personalized greeting message.",
        "produces": ["text/html"],
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "description": "Name for personalized greeting",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/mine-block": {
      "get": {
        "tags": ["blockchain"],
        "summary": "Mines a new block.",
        "produces": ["text/html"],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "type": "string"
            }
          },
          "500": {
            "description": "Error during the mining of the new block",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/get-chain": {
      "get": {
        "tags": ["blockchain"],
        "summary": "Get the entire blockchain.",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "type": "string"
            }
          },
          "500": {
            "description": "Blockchain is not reachable.",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/is-valid": {
      "get": {
        "tags": ["blockchain"],
        "summary": "Checks if the Blockchain is valid.",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "The Blockchain is valid.",
            "schema": {
              "type": "string"
            }
          },
          "500": {
            "description": "Error during validation.",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
